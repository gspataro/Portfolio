{
    "website": {
        "name": "Giuseppe Spataro",
        "description": "Giuseppe Spataro, pianista e sviluppatore web siciliano",
        "author": "Giuseppe Spataro",
        "keywords": "pianista, sviluppatore web, sicilia",
        "url": "http://gspataro.test",
        "friendly_urls": true
    },
    "languages": ["it", "en"],
    "default_language": "it",
    "contents": {
        "projects": "markdown:projects/*.md",
        "projects_cats": "json:projects_categories.json"
    },
    "schemas": {
        "index": {
            "contents": [
                "projects"
            ],
            "template": "index",
            "builder": "simple",
            "slug": "/index",
            "generate": "once"
        },
        "project": {
            "contents": [
                "projects",
                "projects_cats"
            ],
            "template": "project",
            "builder": "post",
            "slug": "/project",
            "generate": "loop:projects"
        },
        "projects": {
            "contents": [
                "projects"
            ],
            "template": "projects",
            "builder": "archive",
            "slug": "/projects",
            "generate": "paginate:projects",
            "options": {
                "per_page": 12
            }
        }
    },
    "exclude_assets": [
        "ui.css"
    ]
}
