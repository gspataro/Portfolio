{
    "website": {
        "name": "Giuseppe Spataro",
        "description": "Giuseppe Spataro, pianista e sviluppatore web siciliano",
        "author": "Giuseppe Spataro",
        "keywords": "pianista, sviluppatore web, sicilia",
        "url": "http://gspataro.test",
        "friendly_urls": true
    },
    "languages": ["it", "en"],
    "default_language": "it",
    "contents": {
        "projects": "markdown:projects/*.md",
        "projects_cats": "json:projects_categories.json",
        "articles": "markdown:articles/*.md",
        "articles_cats": "json:articles_categories.json"
    },
    "schemas": {
        "index": {
            "contents": [
                {
                    "group": "articles",
                    "limit": 3,
                    "orderBy": "frontmatter.published",
                    "order": "desc"
                },
                "articles_cats",
                {
                    "group": "projects",
                    "select": ["cli", "dependencyinjection", "portfolio"]
                }
            ],
            "template": "index",
            "builder": "simple",
            "slug": "/index",
            "generate": "once"
        },
        "project": {
            "contents": [
                "projects",
                "projects_cats"
            ],
            "template": "project",
            "builder": "post",
            "slug": "/progetto",
            "generate": "loop:projects"
        },
        "projects": {
            "contents": [
                "projects"
            ],
            "template": "projects",
            "builder": "archive",
            "slug": "/progetti",
            "generate": "paginate:projects",
            "options": {
                "per_page": 12
            }
        },
        "article": {
            "contents": [
                "articles",
                "articles_cats"
            ],
            "template": "article",
            "builder": "post",
            "slug": "/articolo",
            "generate": "loop:articles"
        },
        "blog": {
            "contents": [
                "articles",
                "articles_cats"
            ],
            "template": "blog",
            "builder": "archive",
            "slug": "/blog",
            "generate": "paginate:articles",
            "options": {
                "per_page": 12
            }
        }
    },
    "exclude_assets": [
        "ui.css"
    ]
}
