{
    "website": {
        "name": "Giuseppe Spataro",
        "description": "Giuseppe Spataro, pianista siciliano",
        "author": "Giuseppe Spataro",
        "keywords": "pianista, musicista, pianista accompagnatore, insegnante di musica, sicilia",
        "url": "http://gspataro.test",
        "friendly_urls": true
    },
    "languages": ["it"],
    "default_language": "it",
    "contents": {
        "articles": "markdown:articles/*.md",
        "articles_cats": "json:articles_categories.json"
    },
    "schemas": {
        "index": {
            "contents": [
                {
                    "group": "articles",
                    "limit": 3,
                    "orderBy": "frontmatter.published",
                    "order": "desc"
                },
                "articles_cats"
            ],
            "template": "index",
            "builder": "simple",
            "slug": "/index",
            "generate": "once"
        },
        "404": {
            "template": "404",
            "builder": "simple",
            "slug": "/404",
            "generate": "once"
        },
        "darkside": {
            "template": "darkside",
            "builder": "simple",
            "slug": "/darkside",
            "generate": "once"
        },
        "article": {
            "contents": [
                "articles",
                "articles_cats"
            ],
            "template": "article",
            "builder": "post",
            "slug": "/articolo",
            "generate": "loop:articles"
        },
        "blog": {
            "contents": [
                "articles",
                "articles_cats"
            ],
            "template": "blog",
            "builder": "archive",
            "slug": "/blog",
            "generate": "paginate:articles",
            "options": {
                "per_page": 12
            }
        }
    },
    "exclude_assets": [
        "ui.css"
    ]
}
